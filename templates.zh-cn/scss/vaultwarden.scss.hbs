/**** 开始静态Vaultwarden更改 ****/
/* 将所有继承它的选择器合并为一个 */
%vw-hide {
  display: none !important;
}

/* 允许在浏览器开发者工具中搜索合并后的样式（查看head标签） */
.vw-hide,
head {
  @extend %vw-hide;
}

/* 隐藏订阅页面标签 */
bit-nav-item[route="settings/subscription"] {
  @extend %vw-hide;
}

/* 隐藏指向免费Bitwarden家庭版的任何链接 */
a[href$="/settings/sponsored-families"] {
  @extend %vw-hide;
}

/* 隐藏SSO的`电子邮件`输入字段 */
.vw-email-sso {
  @extend %vw-hide;
}

/* 隐藏登录页面的`企业单点登录`按钮 */
{{#if (webver ">=2025.5.1")}}
.vw-sso-login {
  @extend %vw-hide;
}
{{else}}
app-root ng-component > form > div:nth-child(1) > div > button[buttontype="secondary"].\!tw-text-primary-600:nth-child(4) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏`使用通行密钥登录`设置 */
app-change-password app-webauthn-login-settings {
  @extend %vw-hide;
}
/* 隐藏登录页面的`使用通行密钥登录` */
{{#if (webver ">=2025.5.1")}}
.vw-passkey-login {
  @extend %vw-hide;
}
{{else}}
app-root ng-component > form > div:nth-child(1) > div > button[buttontype="secondary"].\!tw-text-primary-600:nth-child(3) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏前面两个按钮之后的或文本 */
{{#if (webver ">=2025.5.1")}}
.vw-or-text {
  @extend %vw-hide;
}
{{else}}
app-root ng-component > form > div:nth-child(1) > div:nth-child(3) > div:nth-child(2) {
  @extend %vw-hide;
}
{{/if}}

/* 隐藏登录页面的`其他`按钮 */
.vw-other-login {
  @extend %vw-hide;
}

/* 隐藏组织设置中的双因素认证菜单 */
bit-nav-item[route="settings/two-factor"],
a[href$="/settings/two-factor"] {
  @extend %vw-hide;
}

/* 隐藏组织计划 */
app-organization-plans > form > bit-section:nth-child(2) {
  @extend %vw-hide;
}

/* 隐藏集合管理表单 */
app-org-account form.ng-untouched:nth-child(5) {
  @extend %vw-hide;
}

/* 隐藏组织报告中的`成员访问`报告卡片 */
app-org-reports-home > app-report-list > div.tw-inline-grid > div:nth-child(6) {
  @extend %vw-hide;
}

/* 隐藏两步登录屏幕的设备验证表单 */
app-security > app-two-factor-setup > form {
  @extend %vw-hide;
}

/* 隐藏不支持的自定义角色选项 */
bit-dialog div.tw-ml-4:has(bit-form-control input),
bit-dialog div.tw-col-span-4:has(input[formcontrolname*="access"], input[formcontrolname*="manage"]) {
  @extend %vw-hide;
}

/* 将折叠菜单图标更改为Vaultwarden */
bit-nav-logo bit-nav-item a:before {
  content: "";
  background-image: url("../images/icon-white.svg");
  background-repeat: no-repeat;
  background-position: center center;
  height: 32px;
  display: block;
}
bit-nav-logo bit-nav-item .bwi-shield {
  @extend %vw-hide;
}
/**** 结束静态Vaultwarden更改 ****/
/**** 开始动态Vaultwarden更改 ****/
{{#if signup_disabled}}
/* 从web vault 2025.1.2开始，当注册被禁用时，注册按钮会被隐藏，
  因为web vault会检查/api/config端点。
  注意客户端通常会缓存此端点约1小时，因此更改可能需要一段时间才能生效。
  为了避免按钮在不应该出现时出现，我们会在几个版本中保留此样式 */
/* 隐藏登录屏幕的注册链接 */
{{#if (webver "<2025.3.0")}}
app-login form div + div + div + div + hr,
app-login form div + div + div + div + hr + p {
  @extend %vw-hide;
}
{{else}}
app-root a[routerlink="/signup"] {
  @extend %vw-hide;
}
{{/if}}
{{/if}}

{{#unless mail_2fa_enabled}}
/* 如果邮件未启用，隐藏`电子邮件`双因素认证 */
.providers-2fa-1 {
  @extend %vw-hide;
}
{{/unless}}

{{#unless yubico_enabled}}
/* 如果未启用，隐藏`YubiKey OTP安全密钥`双因素认证 */
.providers-2fa-3 {
  @extend %vw-hide;
}
{{/unless}}

{{#unless emergency_access_allowed}}
/* 如果不允许，隐藏紧急访问 */
bit-nav-item[route="settings/emergency-access"] {
  @extend %vw-hide;
}
{{/unless}}

{{#unless sends_allowed}}
/* 如果不允许，隐藏发送 */
bit-nav-item[route="sends"] {
  @extend %vw-hide;
}
{{/unless}}
/**** 结束动态Vaultwarden更改 ****/
